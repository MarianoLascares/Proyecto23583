<%- include('../../partials/head.ejs') -%>
<body>
    <%- include('../../partials/header.ejs') -%>
    <main class="container login-container">
         <h1 class="title-container-h1">INGRESAR A MI CUENTA</h1>
        <form action="/auth/login" method="post" class="form-admin" enctype="application/x-www-form-urlencoded">
            <div class="form-admin__product-details login-container__details">
                <label for="email">Email</label>
                <input class="admin-input" type="email" name="email" placeholder="ejemplo@correo.com">
            </div>
            <div class="form-admin__product-details login-container__details">
                <label for="password">Contraseña</label>
                <input class="admin-input" type="password" name="password" placeholder="**********">
            </div>
            <div class="form-admin__product-details login-container-buttons">
                <button type="submit" class="form-admin__btn login-container-buttons__btn">INGRESAR</button>
                <input class="login-container-buttons__btn-checkbox" type="checkbox" name="rememberme" id="rememberme">
                <label for="rememberme" class="check-loguin">Recordarme</label>
            </div>
            <a href="" class="link-password">Olvide mi contraseña</a>
        </form>
      
     </main>

     <%- include('../../partials/footer.ejs') -%>
     
</body>
</html>