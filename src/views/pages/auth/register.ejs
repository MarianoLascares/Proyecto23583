<%- include('../../partials/head.ejs') -%>
<body>
    <%- include('../../partials/header.ejs') -%>
    
    <main class="container login-container">
         <h1 class="title-container-h1">CREA TU CUENTA</h1>
         <p class="title-container-h1">Completa el formulario para ser parte del mundo de los Funkos</p>
        <form action="/auth/register" method="post" class="form-admin">
            <div class="form-admin__product-details login-container__details">
                <label for="name">Nombre:</label>
                <input class="admin-input" type="text" name="name" placeholder="John">
            </div>
            <div class="form-admin__product-details login-container__details">
                <label for="lastname">Apellido:</label>
                <input class="admin-input" type="text" name="lastname" placeholder="Doe">
            </div>
            <div class="form-admin__product-details login-container__details">
                <label for="email">Email:</label>
                <input class="admin-input" type="email" name="email" placeholder="ejemplo@correo.com">
            </div>
            <div class="form-admin__product-details login-container__details">
                <label for="password">Contraseña:</label>
                <input class="admin-input" type="password" name="password" placeholder="**********">
            </div>
            <div class="form-admin__product-details login-container__details">
                <label for="password2">Repita Contraseña:</label>
                <input class="admin-input" type="password" name="password2" placeholder="**********">
            </div>
            <div class="form-admin__product-details login-container-buttons">
                <input class="form-admin__btn login-container-buttons__btn" type="submit" value="Registrar" >
                <input class="login-container-buttons__btn-checkbox" type="checkbox" name="TyC" id="TyC">
                <label for="rememberme" class="check-loguin">Acepto <a href="#">Terminos y Condiciones</a></label>
            </div>
        </form>
      
     </main>

     <%- include('../../partials/footer.ejs') -%>
     
</body>
</html>